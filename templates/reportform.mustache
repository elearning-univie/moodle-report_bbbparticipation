{{!
    @template report_bbbparticipation/reportform

    Example context (json):
    {
        "actionurl": "https://someurl",
        "id": "1",
        "sesskey": "1337XOXO"
    }
}}
<form method="get" action="{{{actionurl}}}">
<fieldset class="clearfix collapsible" id="id_bbbparticipation">
    <legend class="ftoggler"><a href="#" class="fheader" role="button" aria-controls="id_bbbparticipation" aria-expanded="true">
        {{# str }} pluginname, report_bbbparticipation {{/ str }}
    </a></legend>
    <input type="hidden" name="id" value="{{id}}"/>
    <input type="hidden" name="sesskey" value="{{sesskey}}"/>
    <div class="row">
        <div class="col-md-3">
            <label for="perpage">{{# str }} modulenameplural, report_bbbparticipation {{/ str }}</label>
         </div>
         <div class="col-md-9">
            {{#selects}}
                <select id="{{id}}" name="bbbs[]" class="custom-select" multiple>
                    {{#options}}
                        <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                    {{/options}}
                </select>
                <br>
            {{/selects}}
        </div>
    </div>


    <div class="row mt-3">
        <div class="col-md-3">
            <label for="perpage">{{# str }} roles, report_bbbparticipation {{/ str }}</label>
         </div>
         <div class="col-md-9">
            {{#rselects}}
                <select id="{{id}}" name="r[]" class="custom-select" multiple>
                    {{#roptions}}
                        <option value="{{rvalue}}" {{#rselected}}selected{{/rselected}}>{{rname}}</option>
                    {{/roptions}}
                </select>
                <br>
            {{/rselects}}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <input type="submit" class="btn btn-primary" value="{{# str }} update, report_bbbparticipation {{/ str }}">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <div id="attendancelistpagination">
            <label for="perpage">{{# str }} pagesize, report_bbbparticipation {{/ str }}</label>
            <select id="perpage" name="perpage" onchange="this.form.submit()">
                <option value="10" title="10" {{#selected10}}selected{{/selected10}}>10</option>
                <option value="20" title="20" {{#selected20}}selected{{/selected20}}>20</option>
                <option value="50" title="50" {{#selected50}}selected{{/selected50}}>50</option>
                <option value="100" title="100" {{#selected100}}selected{{/selected100}}>100</option>
            </select>
            </div>
        </div>
    </div>
    <br>
</fieldset>
</form>
